<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/blueback"
    tools:context="android.com.changyou.ApplyActivity">

    <TextView
        android:id="@+id/tvhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="预定处理消息"
        android:textColor="@android:color/white"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tvabout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_margin="20dp"
        android:layout_below="@+id/tvhead"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="关于您向:"
        />

    <TextView
        android:id="@+id/tvHostName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvhead"
        android:layout_toRightOf="@+id/tvabout"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        android:text="谁"/>
    <TextView
        android:id="@+id/tvText"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvabout"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        android:layout_marginLeft="80dp"
        android:text="提出的预定申请"
        />
    <TextView
        android:id="@+id/tvText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tvText"
        android:layout_marginLeft="80dp"
        android:text="房主已"
        />
    <TextView
        android:id="@+id/tvPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/holo_red_light"
        android:layout_below="@+id/tvText"
        android:layout_toRightOf="@+id/tvText2"
        android:text="同意"
        />

    <TextView
        android:id="@+id/tvText3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tvText2"
        android:layout_marginLeft="80dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:text="您可以："
        />
    <Button
        android:id="@+id/btCall"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_toRightOf="@id/tvText3"
        android:layout_below="@id/tvPoint"
        android:textColor="@android:color/holo_red_light"
        android:text="联系房主"
        />

    <TextView
        android:id="@+id/tvpN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/tvText3"
        android:layout_marginLeft="80dp"
        android:text="房东电话: "
        />

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvText3"
        android:layout_toRightOf="@+id/tvpN"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="0000000000"/>



    <Button
        android:id="@+id/btRemove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我已收到消息"
        android:onClick="onClick"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:textAppearance="?android:textAppearanceLarge"
        android:background="@android:color/white"
        />

</RelativeLayout>
