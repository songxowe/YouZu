<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="android.com.changyou.fragment.HousePublishFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="请完善你的房屋信息"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/colorPrimary"
                />

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnLoginUp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/housename"
                    />

                <EditText
                    android:id="@+id/txtUsername"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="你的房屋名"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/realname"
                    />

                <EditText
                    android:id="@+id/txtRealName"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_realname"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/black_pnum"
                    />

                <EditText
                    android:id="@+id/txtTel"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_tel"
                    android:inputType="phone"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnLoginUp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/price_white"
                    />

                <EditText
                    android:id="@+id/txtPrice"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:hint="你期望的价格"
                    android:inputType="number"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnLoginUp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/model"
                    />

                <Spinner
                    android:id="@+id/spSize"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/homeSizes"
                    android:padding="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="房屋条件信息:"
                android:textAppearance="?android:textAppearance"
                android:textSize="17dp"
                />

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <CheckBox
                    android:id="@+id/cbTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="电视"
                    />

                <CheckBox
                    android:id="@+id/cbKT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="空调"
                    />


                <CheckBox
                    android:id="@+id/cbXYJ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="洗衣机"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <CheckBox
                    android:id="@+id/cbWF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WIFI"
                    />

                <CheckBox
                    android:id="@+id/cbInternet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="电脑"
                    />


                <CheckBox
                    android:id="@+id/cbBX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="冰箱"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="房屋位置信息:"
                android:textAppearance="?android:textAppearance"
                android:textSize="17dp"
                />


            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <Spinner
                    android:id="@+id/spCity"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    >

                </Spinner>

            </LinearLayout>

            <EditText
                android:id="@+id/edAddress"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="可补充详细地址"
                />

            <Button
                android:id="@+id/btnPush"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="提交房源"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@android:color/white"
                />
            <TextView
                android:layout_width="1dp"
                android:layout_height="60dp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
