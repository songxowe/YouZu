<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
    >

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:scaleType="fitXY"
      android:src="@drawable/home2"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="25dp">

    <ImageButton
        android:id="@+id/imgBackButton"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:src="@drawable/left"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgBackButton"
        android:paddingTop="12dp"
        android:text="登录或注册账号"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        />

  </RelativeLayout>


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <ImageView
        android:id="@+id/appImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo4"
        />

    <LinearLayout
        android:id="@+id/loginButtonLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appImage"
        android:orientation="vertical">


      <Button
          android:id="@+id/btnLoginIn"
          style="@style/buttonStyle"
          android:layout_width="280dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="20dp"
          android:background="@color/colorPrimary"
          android:gravity="center"
          android:onClick="onClick"
          android:text="登录"
          android:textAppearance="?android:textAppearanceLarge"
          android:textColor="@android:color/white"
          />

      <Button
          android:id="@+id/btnLoginUp"
          style="@style/buttonStyle"
          android:layout_width="280dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:background="@color/colorPrimary"
          android:gravity="center"
          android:onClick="onClick"
          android:text="注册"
          android:textAppearance="?android:textAppearanceLarge"
          android:textColor="@android:color/white"
          />
    </LinearLayout>


    <ImageButton
        android:id="@+id/btnLoginByQQ"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButtonLinear"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/qq_login"
        />

    <ImageButton
        android:id="@+id/btnLoginBySiNa"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButtonLinear"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/btnLoginByQQ"
        android:src="@drawable/sina_login"
        />

    <ImageButton
        android:id="@+id/btnLoginByBaiDu"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButtonLinear"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/btnLoginBySiNa"
        android:src="@drawable/baidu_login"
        />

    <TextView
        android:id="@+id/tvMassage"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_horizontal"
        android:text="@string/agree_articles"
        android:textColor="@android:color/holo_blue_light"
        />
  </RelativeLayout>

</FrameLayout>
